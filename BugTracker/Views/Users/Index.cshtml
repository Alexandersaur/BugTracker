@model IEnumerable<BugTracker.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Role
        </th>
        <th>
            Projects
        </th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @Html.ActionLink("Manage Role", "ManageUserRoles", "Assignments", new { id = user.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Manage Projects", "ManageProjectUsers", "Assignments", new { id = user.Id }, null)
            </td>
        </tr>
    }

</table>

