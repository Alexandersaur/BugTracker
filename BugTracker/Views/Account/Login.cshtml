@using BugTracker.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BugZap JS</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link href="~/Content/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        .btn {
            transition-duration: 0.4s;
/*            border: 1px solid lightgrey;
*/        }

        .btn:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }

        .btn-admin {
            background-color: #4e89ae;
            color: white;
        }

        .btn-admin:hover {
            background-color: white;
            border: 2px solid #4e89ae;
        }

        .btn-admin:hover span {
            display: none
        }

        .btn-admin:hover:before {
            content: "Full Project Access";
            font: bold;
            color: #4e89ae;
        }

        .btn-projmanager {
            background-color: #43658b;
            color: white;
        }

        .btn-projmanager:hover {
            background-color: white;
            border: 2px solid #43658b;
        }

        .btn-projmanager:hover span {
            display: none
        }

        .btn-projmanager:hover:before {
            content: "Manage Projects And Users";
            color: #43658b;
        }

        .btn-developer {
            background-color: #ed6663;
            color: white;
        }

        .btn-developer:hover {
            background-color: white;
            border: 2px solid #ed6663;
        }

        .btn-developer:hover span {
            display: none
        }

        .btn-developer:hover:before {
            content: "Manage Assigned Tickets";
            color: #ed6663;
        }

        .btn-submitter {
            background-color: #ffa372;
            color: white;
        }

        .btn-submitter:hover {
            background-color: white;
            border: 2px solid #ffa372;
        }

        .btn-submitter:hover span {
            display: none
        }

        .btn-submitter:hover:before {
            content: "Create New Tickets";
            color: #ffa372;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
             <img src="~/Images/BugZapLogo.png" alt="BugZap JS Logo" class="brand-image"
                                style="
                    opacity: .8;
                    border-radius: 15%;
                    display: block;
                    width: 25%;
                    display: inline-block;
                    margin-left: auto;
                    /*margin-right: auto*/"> <b style="display: inline-block; margin-right: auto">BugZap</b>JS
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                @*<p class="login-box-msg">Sign in to start your session</p>*@

                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" name="Email" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" class="form-control" name="Password" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" name="RememberMe" id="rememberMe">
                                    <label for="rememberMe">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-dark btn-block">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }
                </section>


                @*<div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-dark">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google
                    </a>
                </div>
                 /.social-auth-links*@

                <p class="mb-0">
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>
                <p class="mb-0">
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
                <p class="mb-0">
                    @Html.ActionLink("Resend Email Confirmation", "ResendEmailConfirmation")
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    @*<center><i class="fas fa-puzzle-piece fa-3x"></i></center>*@
    <div class="col-4" style="padding-left:30px; padding-right:30px">
    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.Hidden("emailKey", "DAJSE")
        <div>
            <button type="submit" class="btn btn-admin btn-block btn-flat"><span>Demo Admin Login</span></button>
        </div>
    }
    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.Hidden("emailKey", "DPMJSE")
        <div>
            <button type="submit" class="btn btn-projmanager btn-block btn-flat"><span>Demo Project Manager Login</span></button>
        </div>
    }
    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.Hidden("emailKey", "DDJSE")
        <div>
            <button type="submit" class="btn btn-developer btn-block btn-flat"><span>Demo Developer Login</span></button>
        </div>
    }
    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.Hidden("emailKey", "DSJSE")
        <div>
            <button type="submit" class="btn btn-submitter btn-block btn-flat"><span>Demo Submitter Login</span></button>
        </div>
    }
    </div>

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte.min.js"></script>

</body>
</html>
